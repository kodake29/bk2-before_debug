<div class="follower">
<% @user.followers.each do |user| %>
<table class= "follower-box">
<tr>
  <td>
  	<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
  </td>
  <td>  <%= user.name %> </td>
  <td><%= link_to '詳細', user_path(user) %></td>
</tr>

</table>
<% end %>
</div>